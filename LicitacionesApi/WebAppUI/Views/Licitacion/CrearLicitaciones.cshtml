@model DTO.Licitaciones
@{
    ViewBag.Title = "Crear Licitaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--<script src="~/Scripts/View/Licitacion.js"></script>-->

<h2>Crear Licitación</h2>
<script src="~/Scripts/View/CrearLicitacion.js"></script>


<!--Formulario para mostrar datos de la lista-->
<div class="row" onload="cargarLicitaciones">
    @using (Html.BeginForm("CrearLicitacion", "Licitacion", FormMethod.Post, new { @id = "frmlicitacion", @class = "align-items-center justify-content-center" }))
    {

        <fieldset>
            <div class="col-lg-8">
                <h3>Datos Generales</h3>

                <div class="card">
                    <div class="card-body">
                        <div class="form-group">

                            <div>
                                <label for="txtIdAnalista">ID Analista:</label>
                                @Html.TextBoxFor(licitacion => licitacion.IdAnalista, new { @class = "form-control", @id = "txtIdAnalista", @ColumnDataName = "IdAnalista"} )
                            </div>

                            <div>
                                <label for="txtTitulo">Título:</label>
                                @Html.TextBoxFor(licitacion => licitacion.Titulo, new { @class = "form-control", @id = "txtTitulo", @ColumnDataName = "Titulo" })
                            </div>

                            <div>
                                <label for="txtDescripcion">Descripción:</label>
                                @Html.TextAreaFor(licitacion => licitacion.Descripcion, new { @class = "form-control", @id = "txtDescripcion", @ColumnDataName = "Descripcion", @rows = "4" })
                            </div>

                            <div>
                                <label for="txtLugarEntrega">Lugar de entrega:</label>
                                @Html.TextBoxFor(licitacion => licitacion.LugarEntrega, new { @class = "form-control", @id = "txtLugarEntrega", @ColumnDataName = "LugarEntrega", type = "text" })
                            </div>

                            <div>
                                <label for="txtFechaCierreOfertas">Cierre de ofertas:</label>
                                @Html.TextBoxFor(licitacion => licitacion.FechaCierreOfertas, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "txtFechaCierreOfertas", @ColumnDataName = "FechaCierreOfertas", type = "date" })
                            </div>

                            <div>
                                <label for="txtMontoPresupuestado">Presupuesto:</label>
                                @Html.TextBoxFor(licitacion => licitacion.MontoPresupuestado, new { @class = "form-control", @id = "txtMontoPresupuestado", @ColumnDataName = "MontoPresupuestado", type = "number" })
                            </div>

                            <div class="form-group mt-5">
                                <button type="reset" class="btn btn-outline-info" id="btnReset">Limpiar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <div class="col-lg-8 col-producto">
                <h3 class="mt-3">Productos</h3>
                <div class="card bloque-producto my-4" id="numprod-0">
                    <div class="card-body">
                        <div class="form-group">

                            <div class="form-group">
                                <label for="licitacionId" class="form-label mt-4">Identificador:</label>
                                <input id="licitacionId" type="text" class="form-control" ColumnDataName="Id" />
                            </div>


                            <div class="form-group">
                                <label for="licitacionQuantity" class="form-label mt-4">Cantidad:</label>
                                <input id="licitacionQuantity" type="number" class="form-control"
                                       ColumnDataName="Quantity" />
                            </div>

                            <div class="form-group mt-5">
                                <button type="reset" class="btn btn-outline-info" id="btnReset">Limpiar</button>
                                <button type="button" class="btn btn-outline-danger mx-2 remover-producto">Remover</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="col-lg-8 mt-5">
            <button type="button" class="btn btn-outline-info mx-2 agregar-producto">Agregar Producto</button>
            <button type="submit" class="btn btn-outline-success mx-2" id="btnCrearLicitacion">Enviar</button>
        </div>
    }
</div>
