
@{
    ViewBag.Title = "CrearLicitaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Crear Licitación</h2>
<script src="~/Scripts/View/CrearLicitacion.js"></script>

<div class="form-group">

    <!--Formulario para mostrar datos de la lista-->
    <form id="frmLicitacion">



        <div>
            <lable for="txtIdAnalista">ID Analista:</lable>
            <input id="txtIdAnalista" type="text" class="form-control" ColumnDataName="IdAnalista" />
        </div>


        <div>
            <lable for="txtTitulo">Titulo:</lable>
            <input id="txtTitulo" type="text" class="form-control" ColumnDataName="Titulo" />
        </div>


        <div>
            <lable for="txtDescripcion">Descripción:</lable>
            <textarea rows="3" id="txtDescripcion" type="text" class="form-control" ColumnDataName="Descripcion"></textarea>
        </div>


        <div>
            <lable for="txtLugarEntrega">Lugar de Entrega:</lable>
            <input id="txtLugarEntrega" type="text" class="form-control" ColumnDataName="LugarEntrega" />
        </div>


        <div>
            <lable for="txtFechaCierreOfertas">Cierre de Ofertas:</lable>
            <input id="txtFechaCierreOfertas" type="datetime" class="form-control" ColumnDataName="FechaCierreOfertas" />
        </div>



        <div>
            <lable for="txtMontoPresupuestado">Presupuesto:</lable>
            <input id="txtMontoPresupuestado" type="number" class="form-control" ColumnDataName="MontoPresupuestado" />
        </div>



        <div class="form-group">
            <button type="button" class="btn btn-success" id="btnCrearLicitacion">Enviar</button>
            <button type="reset" class="btn btn-info" id="btnReset">Limpiar</button>
        </div>

    </form>

</div>
