
@{
    ViewBag.Title = "Entregas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://kit.fontawesome.com/b76191ee63.js" crossorigin="anonymous"></script>


<script src="~/Scripts/View/Entregas.js"></script>
<link href="~/Content/Entregas.css" rel="stylesheet" />


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-brand">Número de licitación:</p>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <p id="NumLicitacionNav"></p>
            </li>
        </ul>
    </div>
</nav>

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <h3 class="text-center">Escanear código QR</h3>
            <div id="qr-reader">
                <div id="camera-icon" onclick="openCamera()">
                    <i class="fa fa-camera fa-3x"></i>
                </div>
                <div class="text-center mt-4">
                    <h3>ó</h3>
                    <h3>Ingrese el número de Licitación</h3>
                    <input type="number" class="form-control form-control-sm" min="0" id="LicNumber" />
                    <div>
                        <button type="button" id="btnBuscarLic" class="btn btn-primary bg-primary text-light mt-4"> Buscar</button>
                    </div>
                </div>
            </div>
            <div id="camera-container"></div>
        </div>

        <div class="col-6">
            <h3>Productos</h3>
            <table class="table table-striped" id="detallesTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>Producto</th>
                        <th>Cantidad esperada</th>
                        <th>Cantidad recibida</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>


        <label for="txtComentarios" class="form-label mt-4">Comentarios</label>
        <textarea class="form-control" id="txtComentarios"></textarea>
    </div>
    <div class="mt-4 text-center">
        <button type="submit" class="btn btn-outline-primary btn-block" id="completar-reporte">Completar Reporte</button>
    </div>

</div>