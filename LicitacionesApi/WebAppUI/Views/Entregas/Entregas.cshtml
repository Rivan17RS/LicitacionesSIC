
@{
    ViewBag.Title = "Entregas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://kit.fontawesome.com/b76191ee63.js" crossorigin="anonymous"></script>


<script src="~/Scripts/View/Entregas.js"></script>
<link href="~/Content/Entregas.css" rel="stylesheet" />


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Número de licitación:</a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">LIC-12345<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <h2 class="text-center">Escanear código QR</h2>
            <div id="qr-reader">
                <div id="camera-icon" onclick="openCamera()">
                    <i class="fa fa-camera fa-3x"></i>
                </div>
            </div>
            <div id="camera-container"></div>
        </div>

        <div class="col-6">
            <h2>Productos</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Producto</th>
                        <th>Cantidad esperada</th>
                        <th>Cantidad recibida</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="form-check"><input class="form-check-input" type="checkbox" name="producto1"></div></td>
                        <td>Leche(l)</td>
                        <td><input type="number" class="form-control form-control-sm" value="10" readonly></td>
                        <td><input type="number" class="form-control form-control-sm" name="producto1_cantidad"></td>
                        <td>
                            <select class="form-control form-control-sm" name="producto1_estado">
                                <option value="bien">Bien</option>
                                <option value="danado">Dañado</option>
                                <option value="incompleto">Incompleto</option>
                                <option value="faltante">Faltante</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><div class="form-check"><input class="form-check-input" type="checkbox" name="producto2"></div></td>
                        <td>Azucar(kg)</td>
                        <td><input type="number" class="form-control form-control-sm" value="5" readonly></td>
                        <td><input type="number" class="form-control form-control-sm" name="producto2_cantidad"></td>
                        <td>
                            <select class="form-control form-control-sm" name="producto2_estado">
                                <option value="bien">Bien</option>
                                <option value="danado">Dañado</option>
                                <option value="incompleto">Incompleto</option>
                                <option value="faltante">Faltante</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>


        <label for="txtComentarios" class="form-label mt-4">Comentarios</label>
        <textarea class="form-control" id="txtComentarios"></textarea>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary btn-block" id="completar-reporte">Completar Reporte</button>
    </div>

</div>