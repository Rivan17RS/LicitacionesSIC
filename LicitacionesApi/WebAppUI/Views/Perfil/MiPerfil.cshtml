
@{
    ViewBag.Title = "MiPerfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/View/ContrasenaNuevaHandler.js"></script>

<script src="~/Scripts/View/EditarPerfil.js"></script>


<h2 class="my-5 text-primary">Mi perfil</h2>

<div class="row align-items-center justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-body">
                <form id="TblDatosPerfil" class="form-group">
                    <fieldset>
                        <legend>Tus datos actuales</legend>
                            <table id="TblPerfil" class="table table-borderless table-striped">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellidos</th>
                                        <th>Identificación</th>
                                        <th>Correo Electrónico</th>
                                        <th>Teléfono</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Session["User"]</td>
                                        <td>@Session["UserLastName"]</td>
                                        <td>@Session["UserId"]</td>
                                        <td>@Session["CurrentUser"]</td>
                                        <td>@Session["UserTel"]</td>
                                    </tr>
                                </tbody>
                            </table>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>




<div class="row align-items-center justify-content-center">
