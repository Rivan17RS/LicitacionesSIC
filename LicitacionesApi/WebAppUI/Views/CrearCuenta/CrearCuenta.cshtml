
@model DTO.Usuario

@{
    ViewBag.Title = "CrearCuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/View/CrearCuenta.js"></script>
<script src="~/Scripts/View/LocalValidation.js"></script>

<h2 class="my-5 text-primary">Creación de cuenta</h2>


@using (Html.BeginForm("CrearCuenta", "CrearCuenta", FormMethod.Post, new { @id = "createAccount" }))
{
    <div class="row align-items-center justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <form id="createAccount">
                        <fieldset>
                            <legend>Ingrese sus datos</legend>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nombre, new { @class = "form-label mt-4" })
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ingrese su primer nombre", @id = "userFirstName" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Identificacion, new { @class = "form-label mt-4" })
                                @Html.TextBoxFor(model => model.Identificacion, new { @class = "form-control", @placeholder = "Ingrese su identificación", @id = "userID" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Apellidos, new { @class = "form-label mt-4" })
                                @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control", @placeholder = "Ingrese sus apellidos", @id = "userSurnames" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Telefono, new { @class = "form-label mt-4" })
                                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @placeholder = "Ingrese sus número de teléfono", @id = "userPhone" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CorreoElectronico, new { @class = "form-label mt-4" })
                                @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control", @placeholder = "Ingrese su correo electrónico", @id = "userEmail" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Contrasena, new { @class = "form-label mt-4" })
                                @Html.PasswordFor(model => model.Contrasena, new { @class = "form-control", @placeholder = "Ingrese su contraseña", @id = "userPassword" })
                                <small id="passwordHelp" class="form-text text-muted">
                                    Mínimo 8 dígitos, números y símbolos, no puede repetir contraseñas anteriores
                                </small>
                            </div>
                            <button type="submit" class="btn btn-primary mt-4" id="btnCreateAccount">Crear</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


