<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SIC</title>


    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,400,1,0" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/Scripts/View/ActionsControl.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.12.1/b-2.2.3/datatables.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/Images/SIC_Logo.png" alt="SIC" style="height:1.5em"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">


 

                <ul class="navbar-nav me-auto">
                    @if (Session["Role"] != null)
                    {
                        if (Session["Role"].ToString() == "Administrador")
                        {
                            <li class="nav-item">
                                <a>
                                    @Html.ActionLink("Índice", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Premium", "Premium", "Premium", new { area = "" }, new { @class = "nav-link" })</a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Reportes", "Reportes", "Reporte", new { area = "" }, new { @class = "nav-link" })</a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Inventario", "Inventario", "Inventario", new { area = "" }, new { @class = "nav-link" })</a>
                            </li>
                        }

                        else
                        {
                            <li class="nav-item">
                                <a>
                                    @Html.ActionLink("Índice", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Premium", "Premium", "Premium", new { area = "" }, new { @class = "nav-link" })</a>
                            </li>
                            <li>
                                <a>@Html.ActionLink("Entregas", "Entregas", "Entregas", new { area = "" }, new { @class = "nav-link" })</a>
                            </li>
                        }
                    }

                    else
                    {
                        <li class="nav-item">
                            <a>
                                @Html.ActionLink("Índice", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a>@Html.ActionLink("Premium", "Premium", "Premium", new { area = "" }, new { @class = "nav-link" })</a>
                        </li>
                    }

                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown ml-auto">

                        @if (Session["User"] != null)
                        {
                            <a class="nav-link dropdown-toggle text-info" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                ¡Bienvenido @Session["User"]!
                            </a>
                            <div class="dropdown-menu">
                                <a>@Html.ActionLink("Mi Perfil", "MiPerfil", "Perfil", new { area = "" }, new { @class = "nav-link" })</a>
                                <a>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "IniciarSesion", new { area = "" }, new { @class = "dropdown-item text-danger" })</a>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle text-info" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Ingresar
                            </a>
                            <div class="dropdown-menu">
                                <a>@Html.ActionLink("Crear Cuenta", "CrearCuenta", "CrearCuenta", new { area = "" }, new { @class = "dropdown-item" })</a>
                                <a>@Html.ActionLink("Iniciar Sesión", "IniciarSesion", "IniciarSesion", new { area = "" }, new { @class = "dropdown-item" })</a>
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-xl body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DevAces</p>
        </footer>
    </div>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    @RenderSection("scripts", required: false)
</body>
</html>
